<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/icons_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/buttonMapListSwitch"
            android:onClick="onClickMapListSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="@string/button_map"/>

        <ImageButton
            android:id="@+id/imageButtonChat"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:scaleType="centerInside"
            android:background="@null"
            android:layout_toLeftOf="@id/buttonMapListSwitch"
            android:layout_centerVertical="true"
            android:src="@drawable/talks_icon"
            android:contentDescription="@string/desc"/>

        <ImageButton
            android:id="@+id/imageButtonProposeSchedule"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_toLeftOf="@id/imageButtonChat"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:background="@null"
            android:src="@drawable/write_icon"
            android:contentDescription="@string/desc"/>

        <ImageButton
            android:id="@+id/imageButtonSearchSchedule"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/search_icon_background"
            android:layout_toLeftOf="@id/imageButtonProposeSchedule"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:src="@drawable/search_icon"
            android:contentDescription="@string/desc"/>
    </RelativeLayout>
    <FrameLayout
            android:id="@+id/veneziaFragmentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
</LinearLayout>